{
  "manifest_version": 3,
  "name": "Movie Watch Tracker",
  "version": "1.0",
  "description": "Automatically saves movie titles detected on pages so you can track what you've watched.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Movie Watch Tracker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
